<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:text="Usuario"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_below="@+id/logoHorus"
        android:layout_marginLeft="18dip"
        android:layout_marginRight="18dip"
        android:layout_marginTop="58dip"
       />
    <EditText
        android:id="@+id/editUserLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="18dip"
        android:layout_marginRight="18dip"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="Contraseña"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editUserLogin"
        android:id="@+id/textView4"
        android:layout_marginLeft="18dip"
        android:layout_marginRight="18dip"
        android:layout_marginTop="15dip"/>
    <EditText
        android:id="@+id/editPassLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_below="@+id/textView4"
        android:layout_marginLeft="18dip"
        android:layout_marginRight="18dip"

        />
    <TextView
        android:id="@+id/textMensaje"
        android:layout_width="wrap_content"
        android:text="El usuario y/o contraseña son incorrectos"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_below="@+id/editPassLogin"
        android:layout_marginLeft="18dip"
        android:layout_marginRight="18dip"/>
    <CheckBox
        android:id="@+id/checkGuardaLogin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Recordar contraseña"
        android:layout_below="@+id/textMensaje"
        android:layout_marginLeft="18dip"
        android:layout_marginRight="18dip"/>
    <Button
        android:text="Entrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnLogin"
        android:layout_below="@+id/checkGuardaLogin"
        android:layout_marginLeft="18dip"
        android:layout_marginRight="18dip"/>

    <ImageView
        android:id="@+id/logoHorus"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:scaleType="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dip"
        android:background="@drawable/ic_action_about"/>
</RelativeLayout>
